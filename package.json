{
  "name": "term-toolkit",
  "module": "src/index.ts",
  "author": "Ariel Onoriaga",
  "license": "MIT",
  "description": "A CLI tool that offers several commands to help you with your daily tasks.",
  "version": "0.3.5",
  "type": "module",
  "bin": {
    "term-toolkit": "dist/term-toolkit",
    "ttk": "dist/term-toolkit"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.3.0",
    "@types/bun": "latest",
    "@types/commander": "^2.12.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.10",
    "eslint": "^9.6.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "scripts": {
    "prepublishOnly": "rm -rf ./dist && bun run build",
    "publish:minor": "bun run release:minor && git push --follow-tags && npm publish",
    "publish:patch": "bun run release:patch && git push --follow-tags && npm publish",
    "build": "bun build ./src/index.ts --minify --sourcemap --compile --outfile=./dist/term-toolkit",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "lint": "eslint src/**/*.ts -c .eslint.conf.js",
    "lint:fix": "eslint -c .eslint.conf.js --fix"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "sharp": "^0.33.4"
  },
  "main": "dist/term-toolkit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arielonoriaga/term-toolkit.git"
  },
  "keywords": [
    "git",
    "terminal",
    "toolkit",
    "cli",
    "cli-tool",
    "image",
    "image-compressor"
  ],
  "engines": {
    "node": ">= 16",
    "npm": ">= 5.6.0",
    "yarn": ">= 1.6.0"
  },
  "bugs": {
    "url": "https://github.com/arielonoriaga/term-toolkit/issues"
  },
  "homepage": "https://github.com/arielonoriaga/term-toolkit#readme"
}
