{
  "name": "term-toolkit",
  "module": "src/index.ts",
  "author": "Ariel Onoriaga",
  "license": "MIT",
  "description": "A CLI tool that offers several commands to help you with your daily tasks.",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "term-toolkit": "dist/term-toolkit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.14.10",
    "@types/commander": "^2.12.2",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "prepublishOnly": "rm -rf ./dist && bun run build",
    "publish:minor": "bun run release:minor && git push --follow-tags && npm publish",
    "build": "bun build ./src/index.ts --minify --compile --outfile=./dist/term-toolkit",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "sharp": "^0.33.4",
    "typescript": "^5.5.3"
  },
  "main": "dist/term-toolkit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arielonoriaga/term-toolkit.git"
  },
  "keywords": [
    "git",
    "terminal",
    "toolkit",
    "cli",
    "cli-tool",
    "image",
    "image-compressor"
  ],
  "bugs": {
    "url": "https://github.com/arielonoriaga/term-toolkit/issues"
  },
  "homepage": "https://github.com/arielonoriaga/term-toolkit#readme"
}
